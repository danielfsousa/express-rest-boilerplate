{
  "name": "express-rest-boilerplate",
  "version": "2.0.0",
  "private": true,
  "description": "Express boilerplate for building RESTful APIs",
  "repository": {
    "type": "git",
    "url": "git@github.com:danielfsousa/express-rest-es2017-boilerplate.git"
  },
  "license": "MIT",
  "author": "Daniel Sousa <sousa.dfs@gmail.com>",
  "type": "module",
  "imports": {
    "#config": "./src/config.js",
    "#controllers/*": "./src/controllers/*.controller.js",
    "#enums/*": "./src/enums/*.enum.js",
    "#errors/*": "./src/errors/*.error.js",
    "#lib/*": "./src/lib/*.js",
    "#middlewares/*": "./src/middlewares/*.middleware.js",
    "#models/*": "./src/models/*.model.js",
    "#routes/*": "./src/routes/*.route.js",
    "#services/*": "./src/services/*.service.js",
    "#validations/*": "./src/validations/*.validation.js"
  },
  "main": "src/main.js",
  "scripts": {
    "start": "node ./src/main.js",
    "dev": "nodemon ./src/main.js",
    "lint": "eslint . ; prettier . --check",
    "lint:fix": "eslint . --fix ; prettier --write .",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout 20000 --exit --recursive src/api/tests",
    "test:unit": "cross-env NODE_ENV=test mocha src/api/tests/unit",
    "test:integration": "cross-env NODE_ENV=test mocha --timeout 20000 --exit src/api/tests/integration",
    "test:watch": "cross-env NODE_ENV=test mocha --watch src/api/tests/unit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "postcoverage": "open-cli coverage/lcov-report/index.html",
    "validate": "lint-staged",
    "postpublish": "git push --tags",
    "deploy": "sh ./deploy.sh",
    "docs": "apidoc -i src -o docs",
    "postdocs": "open-cli docs/index.html",
    "docker:start": "cross-env NODE_ENV=production pm2-docker start ./src/main.js",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --abort-on-container-exit",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.{js,json,md,yaml,yml,pug}": "prettier --write"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bcryptjs": "2.4.3",
    "bluebird": "^3.5.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.3",
    "dotenv-safe": "^8.2.0",
    "email-templates": "^8.0.7",
    "express": "^4.15.2",
    "express-pino-logger": "^6.0.0",
    "express-validation": "^1.0.2",
    "helmet": "^4.6.0",
    "http-status": "^1.0.1",
    "joi": "^10.4.1",
    "jwt-simple": "0.5.6",
    "lodash-es": "^4.17.21",
    "moment-timezone": "^0.5.13",
    "mongoose": "^5.2.17",
    "nodemailer": "^6.3.1",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "4.0.0",
    "pino": "^6.13.0",
    "pm2": "^5.1.0",
    "pug": "^3.0.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@danielfsousa/prettier-config": "^1.1.0",
    "@prettier/plugin-pug": "^1.16.4",
    "@trivago/prettier-plugin-sort-imports": "^2.0.2",
    "apidoc": "^0.28.1",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "mocha": "^6.2.2",
    "nodemon": "^2.0.1",
    "nyc": "^15.1.0",
    "open-cli": "^7.0.0",
    "pino-pretty": "^5.1.3",
    "prettier": "^2.3.2",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.0.0",
    "supertest": "^6.1.3"
  },
  "engines": {
    "node": ">=14"
  }
}
